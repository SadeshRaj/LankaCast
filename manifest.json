{
  "manifest_version": 3,
  "name": "LankaCast - Dual Language News",
  "version": "3.0",
  "description": "Live Sinhala and English news from Ada Derana with Instant Alerts.",
  "permissions": [
    "alarms",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://sinhala.adaderana.lk/*",
    "https://sinhala.adaderana.lk/*",
    "http://www.adaderana.lk/*",
    "https://www.adaderana.lk/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}