{
  "manifest_version": 3,
  "name": "LankaCast - News Alerts",
  "version": "4.0.0",
  "description": "Sinhala and English News from Ada Derana with Auto-Alerts.",
  "permissions": [
    "alarms",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://www.adaderana.lk/*",
    "https://www.adaderana.lk/*",
    "https://sinhala.adaderana.lk/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/SL128.png",
      "48": "images/SL128.png",
      "128": "images/LankaCast.png"
    }
  },
  "icons": {
    "16": "images/SL128.png",
    "48": "images/LankaCast.png",
    "128": "images/LankaCast.png"
  }
}